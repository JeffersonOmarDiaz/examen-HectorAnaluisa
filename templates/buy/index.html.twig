{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Lista de compras</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Usuario</th>
            <th>Fecha</th>
        </tr>
        </thead>
        <tbody>
        {% for buy in findAll %}
            <tr>
                <td>{{ buy.id }}</td>

                <td>{{ buy.user }}</td>
                <td>{{ buy.date | date("m/d/Y") }}</td>
            </tr>

            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

