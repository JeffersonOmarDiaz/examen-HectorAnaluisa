<form method="post" action="{{ path('product_buy', {'id': product.id}) }}" onsubmit="return confirm('Esta seguro de comprar este articulo? ');">
    <input type="hidden" name="_method" value="POST">
    <input type="hidden" name="_token" value="{{ csrf_token('buy' ~ product.id) }}">
    <button class="btn">Comprar</button>
</form>